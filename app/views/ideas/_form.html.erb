<% if @idea.errors.any? %>
    <ul>
        <% @idea.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ul>
<% end %>

<div>
    <%= form_with(model: [@idea], local: true) do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.submit %>

    <% end %>
</div>


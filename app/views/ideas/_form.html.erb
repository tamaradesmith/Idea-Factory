<% if @idea.errors.any? %>
    <ul>
        <% @idea.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ul>
<% end %>


    <%= form_with(model: [@idea], local: true) do |f| %>
<div class="form">

        <%= f.label :title, class:"form-label" %>
        <%= f.text_field :title, class:"form-field" %>

        <%= f.label :description, class:"form-label" %>
        <%= f.text_field :description, class:"form-field" %>

     
            <%= f.submit class:"form-btn" %>
     
</div>
    <% end %>

